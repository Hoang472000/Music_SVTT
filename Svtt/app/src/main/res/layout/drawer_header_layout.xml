<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:background="@drawable/nav_bar"
    android:paddingTop="@dimen/dimen_16"
    android:paddingLeft="@dimen/dimen_16"
    android:fitsSystemWindows="true"
    android:paddingStart="@dimen/dimen_16"
    android:paddingBottom="@dimen/dimen_20"
    tools:ignore="RtlSymmetry">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dimen_image_nav"
        android:layout_height="@dimen/dimen_image_nav"
        android:paddingTop="20sp"
        app:srcCompat="@drawable/splash_play_music_192"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_margin_top"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/dimen_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minh_bkav_com" />


</LinearLayout>