<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_music_notification"
        android:layout_width="@dimen/dimen_image_notify_big"
        android:layout_height="@dimen/dimen_image_notify_big"
        android:layout_margin="2dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/todo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_song_name_notification"
                style="@style/TextViewNotificationBig"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:textStyle="bold" />

            <TextView
                android:textSize="16sp"
                style="@style/TextViewNotificationBig"
                android:id="@+id/tv_song_author_notification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="#83837A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_previous_notification"
                android:layout_width="@dimen/dimen_btn_notification_big"
                android:layout_height="@dimen/dimen_btn_notification_big"
                android:layout_marginEnd="@dimen/dimen_margin_notification"
                android:src="@drawable/ic_pre"
                android:layout_marginRight="@dimen/dimen_margin_notification" />

            <ImageView
                android:id="@+id/icon_play_notification_big"
                android:layout_width="@dimen/dimen_btn_notification_big"
                android:layout_height="@dimen/dimen_btn_notification_big" />

            <ImageView
                android:id="@+id/icon_next_notification"
                android:layout_width="@dimen/dimen_btn_notification_big"
                android:layout_height="@dimen/dimen_btn_notification_big"
                android:layout_marginStart="@dimen/dimen_margin_notification"
                android:src="@drawable/ic_next"
                android:layout_marginLeft="@dimen/dimen_margin_notification" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>